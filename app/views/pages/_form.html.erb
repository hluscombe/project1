<div>
  <h1>Welcome to Sine.</h1>
  <h1>Sign Up Here</h1>
  <br>
  <%= session[:error] %>

  <%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :class => 'form-control col-6' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'form-control col-6' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, :class => 'form-control col-6' %>
  </div>
  <%= f.submit "Sign Up", :class => 'btn btn-primary' %>
  <% end %>

</div>
