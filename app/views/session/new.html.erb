<h1>Sign In</h1>

<%= session[:error] %>



<%= form_tag login_path do %>

  <div class="form-group">
  <%= label_tag :email %>
  <%= email_field_tag :email, nil, :class => "form-control col-6" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => "form-control col-6"  %>
  </div>
  <div class="form-group">
    <%= submit_tag "Sign In", :class => "btn btn-primary"%>
  </div>
  <br>
<% end %>
