<h1>Designers</h1>

<% @designers.each do |designer| %>
  <%= image_tag designer.image, :class => 'img-thumbnail' %>

  <ul>
    <li>
      Name: <%= link_to designer.name, designer_path(designer.id) %>
    </li>
    <li>
      Date of Birth: <%= designer.dob %>
    </li>
    <li>
      Works at: <%= designer.company %>
    </li>

  </ul>
<% end %>
