<%= form_for @designer do |f| %>

  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true, :class => 'form-control col-6'%>
  </div>

  <div class="form-group">
  <%= f.label :dob, "Date of Birth" %>
  <%= f.text_field :dob, :class => 'form-control col-6' %>
  </div>

  <div class="form-group">
  <%= f.label :company, "Company" %>
  <%= f.text_field :company, :class => 'form-control col-6' %>
  </div>

  <div class="form-group">
  <%= f.label :image, "Photo" %>
  <%= f.url_field :image, :class => 'form-control col-6', :placeholder => 'Paste an image URL' %>
  </div>

  <%= f.submit "Submit", :class => 'btn btn-primary'%>
<% end %>
