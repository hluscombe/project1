<h1>Bands</h1>

<div class="container">
  <% @bands.each do |band| %>
    <%= image_tag band.image, :class => 'img-thumbnail', :class => "rounded mx-auto d-block" %>

    <ul>
      <li>
        Name: <%= link_to band.name, band_path(band.id) %>
      </li>
      <li>
        Year Formed: <%= band.year_formed %>
      </li>
    </ul>
  <% end %>
</div>
