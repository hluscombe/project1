<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <h1>Bands</h1>
    <%= link_to 'Add New Band', new_band_path, :class => "btn btn-primary" %>
    <br>
    <br>
    <% @bands.order(:name).each do |band| %>
    <%= image_tag band.image, :class => 'img-thumbnail img-responsive' %>

    <ul>
      <br>
      <li>
        Name: <%= link_to band.name, band_path(band.id) %>
      </li>
      <li>
        Year Formed: <%= band.year_formed %>
      </li>
    </ul>
    <br>
    <% end %>
  </div>

</div>
