<%= form_for @synth do |f| %>

  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true, :class => 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :voices, "Voice Count" %>
  <%= f.number_field :voices, :class => 'form-control'  %>
  </div>

  <div class="form-group">
  <%= f.label :image, "Photo" %>
  <%= f.url_field :image, :class => 'form-control', :placeholder => 'Paste an image URL' %>
  </div>

  <div class="form-group">
  <%= f.label :designer_id, "Synth Designer" %>
  <%= f.select :designer_id, Designer.pluck(:name, :id), :include_blank => true, :class => 'form-control'  %>
  </div>

  <div class="form-group">
  <%= f.label :band_ids, "Select a band that has used this synth" %>
  <%= f.select :band_ids, Band.pluck(:name, :id), :include_blank => true %>
  </div>

  <%= f.submit "Submit", :class => 'btn btn-primary' %>
<% end %>
